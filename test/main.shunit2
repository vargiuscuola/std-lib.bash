test_hash_defined() {
  declare -a ary=()
  declare -A h=()
  local var
  hash_defined ary          ; assertFalse    hash_defined.1      "$?"
  hash_defined h            ; assertTrue     hash_defined.2      "$?"
  hash_defined var          ; assertFalse    hash_defined.3      "$?"
  hash_defined x            ; assertFalse    hash_defined.4      "$?"
}

test_hash_init() {
  hash_init h              ; assertEquals  hash_init.1    'declare -A h=()'    "$( declare -p h )"
  declare -A h=([x]=1)
  hash_init h              ; assertEquals  hash_init.2    'declare -A h=()'    "$( declare -p h )"
}

test_hash_has-key() {
  declare -A h=([x]="" ["y\"'w"]=2)
  hash_has-key h x          ; assertTrue    hash_has-key.1  $?
  hash_has-key h "y\"'w"    ; assertTrue    hash_has-key.2  $?
  hash_has-key h z          ; assertFalse   hash_has-key.3  $?
  hash_has-key h 2          ; assertFalse   hash_has-key.4  $?
}

test_hash_merge() {
  local stdout
  
  declare -A h1=([a]=1 [b]="2\"'x" [e]=3)
  declare -A h2=([a]=5 [c]="6 p")
  hash_merge h1 h2
  declare -A exp_h=([a]="5" [b]="2\"'x" [c]="6 p" [e]="3" )
  stdout="$( declare -p h1 )"        ; assertEquals  hash_merge.1       "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*h1=/}"
  
  declare -gA global_h=([a]=1 [b]="2\"'x" [e]=3)
  declare -A h2=()
  hash_merge global_h h2
  declare -A exp_h=([a]="1" [b]="2\"'x" [e]="3" )
  stdout="$( declare -p global_h )"  ; assertEquals  hash_merge.2       "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*global_h=/}"

  declare -A h1=()
  hash_merge h1 h2
  stdout="$( declare -p h1 )"        ; assertEquals  hash_merge.3       '()'                                    "${stdout/*h1=/}"

  declare -gA h4=([a]="5 s" [c]="6 p")
  hash_merge h1 h4
  declare -A exp_h=([a]="5 s" [c]="6 p" )
  stdout="$( declare -p h1 )"        ; assertEquals  hash_merge.4       "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*h1=/}"
}

test_hash_merge-last() {
  local stdout
  declare -A exp_h=([a]="1" [b]="2\"'x" [e]="3" )
  stdout="$( declare -p global_h )"  ; assertEquals  hash_merge-last.1  "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*global_h=/}"
}

test_hash_copy() {
  local stdout
  declare -A h1=([a]=1 [b]="2\"'x" [e]=3)
  declare -A h2=([a]=5 [c]="6 p")
  declare -gA global_h=([a]=5 [c]="6 p")
  
  hash_copy h1 h2
  declare -A exp_h=([a]="1" [b]="2\"'x" [e]="3" )
  stdout="$( declare -p h2 )"        ; assertEquals  hash_copy.1      "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*h2=/}"

  hash_copy h1 global_h
  declare -A exp_h=([a]="1" [b]="2\"'x" [e]="3" )
  stdout="$( declare -p global_h )"  ; assertEquals  hash_copy.2      "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*global_h=/}"

  declare -A h2=([a]=5 [c]="6 p")
  hash_copy h2 global_h2
  declare -A exp_h=([a]="5" [c]="6 p" )
  stdout="$( declare -p global_h2 )" ; assertEquals  hash_copy.3      "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*global_h2=/}"
}

test_hash_copy-last() {
  local stdout
  declare -A exp_h=([a]="1" [b]="2\"'x" [e]="3" )
  stdout="$( declare -p global_h )"   ; assertEquals  hash_copy-last.1  "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*global_h=/}"
  declare -A exp_h=([a]="5" [c]="6 p" )
  stdout="$( declare -p global_h2 )"  ; assertEquals  hash_copy-last.2  "$( declare -p exp_h | cut -d= -f2- )"  "${stdout/*global_h2=/}"
}

